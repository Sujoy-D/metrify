# Environment Configuration
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# MongoDB
MONGODB_URI=mongodb://localhost:27017/metrify
MONGODB_MAX_POOL_SIZE=10

# Shopify OAuth
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_customers,read_checkouts,read_analytics,read_returns,read_inventory
SHOPIFY_HOST=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here

# Shopify Webhook Secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# App URLs
APP_URL=https://your-app-url.com
SHOPIFY_APP_URL=https://your-store.myshopify.com

# Pricing Engine Configuration
PRICING_MAX_CHANGE_PERCENT=5
PRICING_MIN_INVENTORY_THRESHOLD=10
PRICING_DRY_RUN=true
PRICING_CRON_SCHEDULE=0 2 * * *

# Rate Limiting
SHOPIFY_API_RATE_LIMIT=40
SHOPIFY_API_BURST_LIMIT=40

# Worker Configuration
AGGREGATION_CRON_SCHEDULE=0 * * * *
RECONCILIATION_CRON_SCHEDULE=0 3 * * *

# Logging
LOG_LEVEL=info
